<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/banner_product_image"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:text="Halloween Offer"
        android:textColor="@color/blue_default_color"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/banner_product_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/banner_product_offer"
        app:layout_constraintTop_toTopOf="@+id/banner_product_image" />

    <TextView
        android:id="@+id/banner_product_offer"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="20% off in our All products"
        android:textColor="@color/black_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="190dp" />

    <Button
        android:id="@+id/banner_shop_now_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/loginsignupbg"
        android:padding="2dp"
        android:text="SHOP NOW"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/banner_product_image"
        app:layout_constraintStart_toStartOf="@+id/banner_product_offer"
        app:layout_constraintTop_toBottomOf="@+id/banner_product_offer" />
</androidx.constraintlayout.widget.ConstraintLayout>