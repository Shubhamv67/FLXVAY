<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity">


    <TextView
        android:id="@+id/Create_addresss_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/b612"
        android:text="Profile"
        android:textColor="#323232"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Create_addresss_title">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/Name_Add_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="john deo"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:theme="@style/edittext_theme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Address lane"
            android:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/Manage_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Shewrapara 958"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:theme="@style/edittext_theme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="City"
            android:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/City_Add_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mandsaur"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:theme="@style/edittext_theme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Gender"
            android:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/Postal_Code_Add_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Male"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:theme="@style/edittext_theme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/Email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="john@gmail.com"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black"
            android:theme="@style/edittext_theme" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone Number"
            android:textColor="#A6A6A6" />

        <EditText
            android:id="@+id/Phone_Number_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="+884552242345"
            android:inputType="phone"
            android:textColorHint="@color/black"
            android:theme="@style/edittext_theme" />
    </LinearLayout>

    <Button
        android:id="@+id/AddAddress_btn"
        android:layout_width="0dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/loginsignupbg"
        android:elevation="3dp"
        android:padding="12dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#50FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>